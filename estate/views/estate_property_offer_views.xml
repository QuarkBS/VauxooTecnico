<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property offers">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="status"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                <field name="price"/>
                <field name="status" optional="hide"/>
                <field name="partner_id"/> 
                <field name="date_deadline"/>
                <field name="validity"/>
                <button name="action_accept" type="object" string = "Accept" icon="fa-check" attrs="{'invisible': ['|',('status', '=', 'accepted'),('status', '=', 'refused')]}"/>
                <button name="action_refuse" type="object" string = "Refuse" icon="fa-times" attrs="{'invisible': ['|',('status', '=', 'accepted'),('status', '=', 'refused')]}"/>
            </tree>
        </field>
    </record>

</odoo>